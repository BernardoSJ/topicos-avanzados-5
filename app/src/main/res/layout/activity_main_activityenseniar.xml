<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityenseniar">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="Aprendiendo las vocales"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="74dp"
        android:text="Escoje un animal que inicie con la vocal: "
        android:textSize="18sp"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/vocal"
        android:layout_width="28dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView20"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imagen1"
        android:layout_width="95dp"
        android:layout_height="93dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="146dp" />

    <ImageView
        android:id="@+id/imagen2"
        android:layout_width="95dp"
        android:layout_height="93dp"
        android:layout_alignTop="@+id/imagen1"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imagen3"
        android:layout_width="95dp"
        android:layout_height="93dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imagen1"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp" />

    <Button
        android:id="@+id/boton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imagen1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="199dp"
        android:text="1"
        android:layout_alignRight="@+id/imagen1" />

    <Button
        android:id="@+id/boton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/boton1"
        android:layout_centerHorizontal="true"
        android:text="2" />

    <Button
        android:id="@+id/boton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imagen3"
        android:layout_alignTop="@+id/boton1"
        android:text="3"
        android:layout_alignLeft="@+id/imagen3" />

    <ImageView
        android:id="@+id/imagenmen"
        android:layout_width="236dp"
        android:layout_height="136dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />
</RelativeLayout>